@model IEnumerable<DBU_Advising_Scheduler.Models.cours>
@{
    WebGrid grid = new WebGrid(Model, canPage: false, defaultSort: "Department");
}
<h2>Courses List</h2>
@Html.TextBox("filter")
@using (Html.BeginForm("AddEvents", "Calendar", FormMethod.Post, new { id = "addForm" }))
{
    @Html.Hidden("selectedRows");
}
<input type="button" value="Add Courses" onclick="addEvents()" />


<div id="grid">
    @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                grid.Column("Title", style: "title"),
                grid.Column("Department", style: "dept"),
                grid.Column("Course", style: "course"),
                grid.Column("Section", style: "section"),
                grid.Column("Building", style: "building", format: item => item.Building == "" ? " - " : item.Building),
                grid.Column("Room", style: "room", format: item => item.Room == "" ? " - " : item.Room),
                grid.Column("Location", style: "location"),
                grid.Column("Start_Datetime", "Start Date", style: "sDate", format: item => item.Start_Datetime.ToString("MM/dd/yyyy")),
                grid.Column("End_Datetime", "End Date", style: "eDate", format: item => item.End_Datetime.ToString("MM/dd/yyyy")),
                grid.Column("Start_Datetime", "Start Time", style: "sTime", format: item => item.Start_Datetime.ToString("hh:mm tt") == "12:00 AM" ? " - " : item.Start_Datetime.ToString("hh:mm tt")),
                grid.Column("End_Datetime", "End Time", style: "eTime", format: item => item.End_Datetime.ToString("hh:mm tt") == "12:00 AM" ? " - " : item.End_Datetime.ToString("hh:mm tt")),
                grid.Column("Days", style: "days"),
                grid.Column("Faculty_First_Name", "Faculty First Name", style: "fName"),
                grid.Column("Faculty_Last_Name", "Faculty Last Name", style: "lName"),
                grid.Column("Notes", style: "description")
         ))
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    $('td').click(function () {
        var selectable = true;
        var p = $(this).parent();
        if (!p.hasClass("selected")) {

            if (p.children(".days").text() != " - " && p.children(".days").text() != "") {
                var pDays = p.children(".days").text().split(' ');
                var s1 = new Date(p.children(".sDate").text() + " " + p.children(".sTime").text());
                var e1 = new Date(p.children(".eDate").text() + " " + p.children(".eTime").text());

                $(".selected").each(function () {
                    var tDays = $(this).children(".days").text().split(' ');

                    if (pDays.some(elem => tDays.indexOf(elem) >= 0)) {
                        var s2 = new Date($(this).children(".sDate").text() + " " + $(this).children(".sTime").text());
                        var e2 = new Date($(this).children(".eDate").text() + " " + $(this).children(".eTime").text());

                        if (s1 <= e2 && e1 >= s2) {
                            if (s1.toTimeString().split(' ')[0] < e2.toTimeString().split(' ')[0] && e1.toTimeString().split(' ')[0] > s2.toTimeString().split(' ')[0]) {
                                selectable = false;
                            }
                        }
                    }

                });
            }
        }

        if (selectable) {
            p.toggleClass('selected');
        }
        else {
            alert("Not able to select. Class times conflict.");
        }
    });


    $('#filter').keyup(function () {

        var searchText = $(this).val().toLowerCase();

        $('tr:not(".header")').each(function () {

            var currentText = $(this).text().toLowerCase(),
                showCurrentTr = currentText.indexOf(searchText) !== -1;

            $(this).toggle(showCurrentTr);
        });
    });


    function addEvents() {
        $("[name='selectedRows']").val("");
        var courses = $('.selected').map(function () {
            var obj = new Object();
            obj.Title = $(this).children().eq(0).text();
            obj.Department = $(this).children().eq(1).text();
            obj.Course = $(this).children().eq(2).text();
            obj.Section = $(this).children().eq(3).text();
            obj.Building = $(this).children().eq(4).text();
            obj.Room = $(this).children().eq(5).text();
            obj.Location = $(this).children().eq(6).text();
            obj.Start_Date = $(this).children().eq(7).text();
            obj.End_Date = $(this).children().eq(8).text();
            obj.Start_Time = $(this).children().eq(9).text();
            obj.End_Time = $(this).children().eq(10).text();
            obj.Days = $(this).children().eq(11).text();
            obj.Faculty_First_Name = $(this).children().eq(12).text();
            obj.Faculty_Last_Name = $(this).children().eq(13).text();
            obj.Notes = $(this).children().eq(14).text();

            return obj;
        });

        var s = "{\"courses\":" + JSON.stringify(courses).replace("{", "[");
        s = JSON.stringify(courses).replace("{", "[")
        s = s.slice(0, s.indexOf(",\"length\"")) + "]";
        s = s.replace(/\"\d\":/g, "");

        $("[name='selectedRows']").val(s);

        $("#addForm").submit();
    }
</script>