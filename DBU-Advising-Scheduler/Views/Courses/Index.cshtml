@model IEnumerable<DBU_Advising_Scheduler.Models.cours>
@{
    WebGrid grid = new WebGrid(Model);
}
<h2>Courses List</h2>

@using (Html.BeginForm("AddEvents", "Calendar", FormMethod.Post, new { id = "addForm" }))
{
    @Html.TextBox("selectedRows");
}
<input type="button" value="Add Courses" onclick="addEvents()" />


<div id="grid">
    @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                grid.Column("Title", format: (item) => item.GetSelectLink(item.Title)),
                grid.Column("Department", " Department"),
                grid.Column("Course", "Course"),
                grid.Column("Section", "Section"),
                grid.Column("Building", "Building"),
                grid.Column("Room", "Room"),
                grid.Column("Location", "Location"),
                grid.Column("Start_Datetime", "Start Date"),
                grid.Column("End_Datetime", "End Date"),
                grid.Column("Start_Datetime", "Start Time"),
                grid.Column("End_Datetime", "End Time"),
                grid.Column("Days", "Days"),
                grid.Column("Faculty_First_Name", "Faculty First Name"),
                grid.Column("Faculty_Last_Name", "Faculty Last Name"),
                grid.Column("Notes", "Notes", style: "description")
         ))
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    $('td').click(function () {
        $(this).parent().toggleClass('selected');
    });

    function addEvents() {
        $("[name='selectedRows']").val("");
        var courses = $('.selected').map(function () {
            var obj = new Object();
            obj.Title = $(this).children().eq(0).text();
            obj.Department = $(this).children().eq(1).text();
            obj.Course = $(this).children().eq(2).text();
            obj.Section = $(this).children().eq(3).text();
            obj.Building = $(this).children().eq(4).text();
            obj.Room = $(this).children().eq(5).text();
            obj.Location = $(this).children().eq(6).text();
            obj.Start_Date = $(this).children().eq(7).text();
            obj.End_Date = $(this).children().eq(8).text();
            obj.Start_Time = $(this).children().eq(9).text();
            obj.End_Time = $(this).children().eq(10).text();
            obj.Days = $(this).children().eq(11).text();
            obj.Faculty_First_Name = $(this).children().eq(12).text();
            obj.Faculty_Last_Name = $(this).children().eq(13).text();
            obj.Notes = $(this).children().eq(14).text();

            return obj;
        });

        var s = "{\"courses\":" + JSON.stringify(courses).replace("{", "[");
        s = JSON.stringify(courses).replace("{","[")
		s = s.slice(0,s.indexOf(",\"length\"")) + "]";
        s = s.replace(/\"\d\":/g, "");

        $("[name='selectedRows']").val(s);

        $("#addForm").submit();
    }
</script>